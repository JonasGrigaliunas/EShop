
@model EShop.Models.ItemViewModel.CreateItem
<h3>Create item form</h3>

@using (Html.BeginForm("Create", "Item", null, FormMethod.Post, false, new { @class = "form-horizontal form-label-left" }))
{
    //nezinau, ar cia pagal ParentItemId turi buti
    @Html.HiddenFor(m => m.CategoryId)
    <div class="form-group">
        @Html.LabelFor(m => m.Name, null, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Code, null, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Code, null, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, null, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Description, null, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, null, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Price, null, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Quantity, null, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Quantity, null, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </div>
}