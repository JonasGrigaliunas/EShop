
@using EShop.Models.CategoryViewModels
@model IList<EShop.Data.Category>

<div class="jumbotron">
    <h1>Hello, to you</h1>
    <p>Check out my categories in demo E-shop.</p>
</div>

@*Html Partial is used when we want functionallity from other Controler. It is similar to calling a method*@
<h4>Create category</h4>
@Html.Partial("Create", new CreateCategory())

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                Category name
            </th>
            <th>
                Description
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    @category.Name 
                </td>
                <td>
                    @category.Description
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new {id = category.Id})
                </td>
            </tr>
        }
    </tbody>
</table>