@model EShop.Models.CategoryViewModels.CreateCategory


@using (Html.BeginForm("Create", "Category", null, FormMethod.Post, false, new {@class= "form-horizontal form-label-left" }))
{
    @Html.HiddenFor(m=>m.ParentCategoryId)
    <div class="form-group">
        @Html.LabelFor(m=>m.Name, null, new {@class= "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m=>m.Name, null, new {@class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, null, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Description, null, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
 
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </div>
    <div class="ln_solid"></div>
}